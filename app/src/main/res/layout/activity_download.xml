<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="8dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/edUrl"
            android:layout_weight="7"
            android:layout_gravity="left|center_vertical"
            android:textAlignment="gravity"
            android:hint="http://www.renault.ua/media/brochures/att00452579/Fluence_ebrochure.pdf"
            android:singleLine="true"
            android:textSize="14dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Download"
            android:id="@+id/bDownload"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:textSize="14dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/my_pb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pbDownloadProgress"
            android:max="100"
            android:minHeight="25dp"
            android:maxHeight="25dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/tvDigitProgress"
            android:layout_gravity="left|center"
            android:gravity="top|center"
            android:textAlignment="gravity"
            android:textStyle="bold|italic"
            android:hint="0%" />
    </TableRow>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Download history"
            android:id="@+id/tvDownloadHistory"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:textAlignment="gravity"
            android:gravity="center_horizontal"
            android:textSize="16dp"
            android:textColor="#FF000000" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lvDownloadHistory" />
    </LinearLayout>

</LinearLayout>